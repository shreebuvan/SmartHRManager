<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pro_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proj"
        android:textSize="60sp"
        android:paddingLeft="15dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_tit"
        android:text="@string/Pro_tit"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/pro_det"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pro_id"
        android:textStyle="bold"
        android:text="Project Id"
        android:textSize="40sp"
        android:layout_margin="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="60dp"
        android:layout_below="@id/pro_tit"/>
  </RelativeLayout>
</ScrollView>