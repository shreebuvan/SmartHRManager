<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity9">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/pro_cre"
      android:id="@+id/pro_cre"
      android:textSize="30sp"
      android:layout_margin="20dp"
      android:textStyle="bold"
      android:layout_centerHorizontal="true"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/Pro_tit"
      android:id="@+id/pro_t"
      android:layout_margin="20dp"
      android:layout_below="@id/pro_cre"/>
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Project Id"
          android:id="@+id/pro_tit"
          android:layout_margin="20dp"
          android:layout_below="@id/pro_t"/>
      <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/skills"
       android:layout_margin="20dp"
       android:layout_below="@id/pro_tit"
       android:hint="Skills needed"/>
   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/count"
       android:layout_margin="20dp"
       android:hint="Count"
       android:layout_below="@id/skills"/>
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="Created"
         android:id="@+id/creat"
         android:layout_margin="20dp"
         android:layout_below="@id/count"/>
  </RelativeLayout>
</ScrollView>